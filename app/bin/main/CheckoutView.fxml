<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.checkout.CheckoutController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f5f5f5;">

    <VBox spacing="25" AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="40.0"
          AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;"
          alignment="TOP_CENTER">

        <!-- Title: "Your Shopping Cart" -->
        <Label text="Your Shopping Cart"
               style="-fx-font-size: 36px; -fx-font-weight: 600; -fx-text-fill: #2c3e50; -fx-margin-bottom: 20;"/>

        <!-- Item Count -->
        <Label fx:id="itemCountLabel"
               text="Items in cart: 0"
               style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d; -fx-margin-bottom: 20;"/>

        <TextField fx:id="CouponsTextField"
                   promptText="Insert Discount Code"
                   maxWidth="250"
                   style="-fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: black;" />

        <!-- Button -->
        <Button text="Pay and get receipt"
                style="-fx-padding: 10 20; -fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                onAction="#goToReceiptPage"/>
        <Label
                fx:id="totalPriceLabel"
                text="Total Price: $0.00"
                style="-fx-font-size: 18px; -fx-font-weight: bold;"/>


        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="couponCodeField"
                       promptText="Enter Coupon Code"
                       prefWidth="200"
                       style="-fx-font-size: 14px;"/>
            <Button text="Apply Coupon"
                    onAction="#applyCoupon"
                    style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </VBox>
    </VBox>

</AnchorPane>
