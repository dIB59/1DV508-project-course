<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.home.HomeController"
            prefWidth="1280.0" prefHeight="800.0">

    <!-- Central VBox -->
    <VBox spacing="30" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding: 80;">

        <!-- Welcome Title -->
        <Label text="Welcome to our Kiosk!"
               fx:id="welcomeLabel"
               styleClass="text-primary"
               style="-fx-font-size: 44px; -fx-font-weight: bold;" />

        <Region prefHeight="50"/>

        <!-- Subtitle -->
        <Label text="Please choose one of the options below:"
               styleClass="text-primary"
               style="-fx-font-size: 20px;" />

        <!-- Spacer between subtitle and buttons -->
        <Region prefHeight="20"/>

        <!-- Ordering Buttons -->
        <VBox spacing="20" alignment="CENTER">
            <Button text="🍽  Eat-in"
                    fx:id="eatInButton"
                    onAction="#goToMenuPageEatIn"
                    prefWidth="200" prefHeight="55"
                    styleClass="btn-primary"
                    style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 12;" />

            <Button text="🛍  Takeout"
                    fx:id="takeOutButton"
                    onAction="#goToMenuPageTakeout"
                    prefWidth="200" prefHeight="55"
                    styleClass="btn-primary"
                    style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 12;" />
        </VBox>
    </VBox>

    <!-- Language Selector -->
    <ComboBox fx:id="languageSelector"
              prefWidth="150"
              onAction="#translatePage"
              AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20"
              styleClass="btn-primary"
              style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 12;"
    />

    <!-- Admin Button -->
    <Button text="Admin"
            fx:id="adminButton"
            onAction="#goToAdminPage"
            AnchorPane.bottomAnchor="30"
            AnchorPane.rightAnchor="30"
            styleClass="btn-secondary"
            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 25;" />
</AnchorPane>