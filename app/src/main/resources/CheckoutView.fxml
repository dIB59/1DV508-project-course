<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.checkout.CheckoutController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            style="-fx-background: #f5f5f5;"
            prefWidth="900" prefHeight="1000">

    <VBox spacing="30" alignment="TOP_CENTER"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;">

        <Label text="Checkout"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1E1EA9;"/>

        <!-- Rotating Campaign Card -->
        <StackPane fx:id="campaignCardPane"
                   prefHeight="340"
                   maxWidth="820"
                   alignment="CENTER"
                   style="-fx-padding: 10;"/>

        <Label fx:id="itemCountLabel"
               text="Items: 0"
               style="-fx-font-size: 16px; -fx-text-fill: #555;"/>

        <VBox fx:id="itemListContainer" spacing="20" alignment="TOP_LEFT" prefWidth="1080">
            <!-- Dynamically populated items -->
        </VBox>

        <VBox VBox.vgrow="ALWAYS"/>

        <!-- Total Price -->
        <Label fx:id="totalPriceLabel"
               text="Total Price: $0.00"
               style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-fill: #131519; -fx-margin-bottom: 30;"/>

        <HBox spacing="20" alignment="CENTER">
            <Label text="Print Receipt?" style="-fx-font-size: 16px;"/>

            <RadioButton fx:id="yesPrint" text="Yes"/>
            <RadioButton fx:id="noPrint" text="No"/>
        </HBox>


        <!-- Buttons -->
        <HBox spacing="30" alignment="CENTER">
            <Button text="Continue Shopping"
                    style="-fx-padding: 15 40; -fx-font-size: 18px; -fx-background-color:#FFD54F ; -fx-text-fill: #1E1EA9; -fx-background-radius: 8; -fx-cursor: hand;"
                    onAction="#goToMenuPage"/>
            <Button text="Pay"
                    style="-fx-padding: 15 40; -fx-font-size: 18px; -fx-background-color: #FFD54F; -fx-text-fill: #1E1EA9; -fx-background-radius: 8; -fx-cursor: hand;"
                    onAction="#goToMemberLogin"/>
        </HBox>

        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="couponCodeField"
                       promptText="Enter Coupon Code"
                       prefWidth="200"
                       style="-fx-font-size: 14px;"/>

            <Button text="Apply Coupon"
                    onAction="#applyCoupon"
                    style="-fx-background-color:#FFD54F ; -fx-text-fill:#1E1EA9; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </VBox>

    </VBox>
</ScrollPane>