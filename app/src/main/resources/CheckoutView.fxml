<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.checkout.CheckoutController"
            prefHeight="600.0" prefWidth="360.0"
            style="-fx-background-color: #f5f5f5;">

    <VBox spacing="20" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">

        <Label text="Checkout"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1E1EA9;" />
        <Label fx:id="itemCountLabel"
               text="Items in cart: 0"
               style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d; -fx-margin-bottom: 20;"/>

        <VBox fx:id="itemListContainer" spacing="15" alignment="TOP_LEFT" prefWidth="300">
            <!-- Dynamically populated items -->
        </VBox>

        <Label fx:id="totalPriceLabel"
               text="Total: $0.00"
               style="-fx-font-size: 16px; -fx-text-fill: black;" />

        <VBox VBox.vgrow="ALWAYS"/>

        <Button text="Confirm Order"
                onAction="#goToReceiptPage"
                prefWidth="280"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #FFD54F; -fx-text-fill: #1E1EA9; -fx-background-radius: 15; -fx-padding: 12 0; -fx-cursor: hand;" />

        <VBox spacing="4" alignment="CENTER">
            <!-- Optional image icon if set -->
            <Label text="Menu" style="-fx-text-fill: #1E1EA9; -fx-font-size: 12px;" />
        </VBox>

    </VBox>
</AnchorPane>
