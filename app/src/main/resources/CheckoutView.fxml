<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.checkout.CheckoutController"
            style="-fx-background-color: #f5f5f5;
            -fx-min-width: 1000px;
            -fx-min-height: 1000px;
">

    <VBox spacing="25" AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="40.0"
          AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;"
          alignment="TOP_CENTER">

        <!-- Title: "Your Shopping Cart" -->
        <Label text="Your Shopping Cart"
               style="-fx-font-size: 36px; -fx-font-weight: 600; -fx-text-fill: #2c3e50; -fx-margin-bottom: 20;"/>

        <!-- Item Count -->
        <Label fx:id="itemCountLabel"
               text="Items in cart: 0"
               style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d; -fx-margin-bottom: 20;"/>

        <!-- List of items (dynamically populated) -->
        <VBox fx:id="itemListContainer" spacing="20"
              style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
            <!-- Items will be dynamically added here -->
        </VBox>

        <!-- Spacer VBox to grow -->
        <VBox VBox.vgrow="ALWAYS"/>

        <!-- Total Price -->
        <Label fx:id="totalPriceLabel"
               text="Total Price: $0.00"
               style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-fill: #131519; -fx-margin-bottom: 30;"/>

        <!-- Buttons -->
        <HBox spacing="30" alignment="CENTER">
            <Button text="Continue Shopping"
                    style="-fx-padding: 15 40; -fx-font-size: 18px; -fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;"
                    onAction="#goToMenuPage"/>
            <Button text="Pay and Get Receipt"
                    style="-fx-padding: 15 40; -fx-font-size: 18px; -fx-background-color: #1a1a2a; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;"
                    onAction="#goToReceiptPage"/>
        </HBox>

        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="couponCodeField"
                       promptText="Enter Coupon Code"
                       prefWidth="200"
                       style="-fx-font-size: 14px;"/>
            <Button text="Apply Coupon"
                    onAction="#applyCoupon"
                    style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </VBox>
    </VBox>

</AnchorPane>
