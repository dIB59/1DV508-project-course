<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.menu.MenuController"
            prefHeight="600.0" prefWidth="600.0">

    <!-- Header (always visible) -->
    <Label text="Menu Page"
           layoutX="20" layoutY="20"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Scrollable Menu Section -->
    <ScrollPane layoutX="10" layoutY="60" prefHeight="480.0" prefWidth="580.0" fitToWidth="true"
                AnchorPane.topAnchor="60" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
                AnchorPane.bottomAnchor="60">
        <VBox fx:id="menuList"
              spacing="20"
              alignment="TOP_CENTER"
              style="-fx-padding: 20;">
            <!-- Menu items dynamically injected here -->
        </VBox>
    </ScrollPane>

    <!-- Checkout Button (bottom right) -->
    <Button text="Go to Checkout"
            style="-fx-padding: 10 20; -fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
            onAction="#goToMemberLogin"
            AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10"/>
</AnchorPane>
