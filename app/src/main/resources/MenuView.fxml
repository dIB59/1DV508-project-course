<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.features.menu.MenuController">

    <VBox spacing="25" alignment="TOP_CENTER"
          AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="40.0"
          AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;">

        <!-- Title -->
        <Label text="Menu"
               style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: black;" />

        <!-- Tag Button Container -->
        <ScrollPane fitToHeight="true" vbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    prefHeight="70" maxHeight="70">
            <HBox fx:id="tagButtonContainer" spacing="15" alignment="CENTER_LEFT"
                  style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-background-radius: 10;" />
        </ScrollPane>

        <!-- Product Grid Scroll Section -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <GridPane fx:id="menuGrid" hgap="30.0" vgap="30.0"
                      style="-fx-background-color: transparent;">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                </columnConstraints>
            </GridPane>
        </ScrollPane>

        <!-- Checkout Button -->
        <Button text="Go to Checkout" onAction="#goToCheckoutPage"
                style="-fx-padding: 15 40; -fx-font-size: 18px; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
    </VBox>

</AnchorPane>
