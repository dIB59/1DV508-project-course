<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.menu.MenuController"
            prefHeight="600.0" prefWidth="800.0">

    <Label text="Menu Page"
           layoutX="20" layoutY="20"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox layoutX="10" layoutY="60" prefWidth="780" prefHeight="480"
          AnchorPane.topAnchor="60" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="60">

        <ScrollPane fitToWidth="true" prefWidth="150" prefHeight="480"
                    hbarPolicy="NEVER">
            <VBox fx:id="tagButtonContainer"
                  spacing="10"
                  style="-fx-padding: 10; -fx-background-color: #f0f0f0;" />
        </ScrollPane>


        <!-- Right side: Product List -->
        <ScrollPane fitToWidth="true" prefWidth="630">
            <VBox fx:id="menuList"
                  spacing="20"
                  alignment="TOP_CENTER"
                  style="-fx-padding: 20;" />
        </ScrollPane>
    </HBox>

    <!-- Go to Home page button-->
    <Button text="Go to Home"
            style="-fx-padding: 10 20; -fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
            onAction="#goToHomePage"
            AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"/>

    <Button text="Go to Checkout"
            style="-fx-padding: 10 20; -fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
            onAction="#goToCheckoutPage"
            AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10"/>
</AnchorPane>
