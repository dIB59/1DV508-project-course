<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.features.menu.MenuController">

    <VBox spacing="25" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;">

        <!-- Tag Button Container -->
        <ScrollPane fitToHeight="true" vbarPolicy="NEVER" hbarPolicy="NEVER"
                    prefHeight="70" maxHeight="70" minHeight="70"
                    prefWidth="800" maxWidth="800" minWidth="800"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <HBox alignment="CENTER" style="-fx-background-color: transparent;" >
                <HBox fx:id="tagButtonContainer" spacing="15" alignment="CENTER"
                      style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-background-radius: 10;" />
            </HBox>
        </ScrollPane>


        <!-- Product Grid Scroll Section -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <GridPane fx:id="menuGrid" hgap="30.0" vgap="30.0"
                      style="-fx-background-color: transparent;">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                </columnConstraints>
            </GridPane>
        </ScrollPane>

        <!-- Buttons at Bottom -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancel Order" onAction="#goToHomePage"
                    style="-fx-padding: 15 30; -fx-font-size: 16px; -fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
            <Button text="Go to Checkout" onAction="#goToCheckoutPage"
                    style="-fx-padding: 15 30; -fx-font-size: 16px; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
        </HBox>

    </VBox>

</AnchorPane>
