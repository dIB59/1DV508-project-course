<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="menuView"
            fx:controller="org.example.features.menu.MenuController"
            style="-fx-background-color: white;">
    <HBox spacing="25"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;">
        <!-- Tag Button Container -->
        <VBox alignment="TOP_CENTER" spacing="10"
              prefWidth="200" maxWidth="220" minWidth="180"
              style="-fx-background-color: #f0f0f0; -fx-background-radius: 10; -fx-padding: 20;">
            <Label text="Categories" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />
            <ScrollPane fitToWidth="true" fitToHeight="true" vbarPolicy="NEVER" hbarPolicy="NEVER"
                        style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox fx:id="tagButtonContainer" spacing="15" alignment="TOP_CENTER"/>
            </ScrollPane>
        </VBox>

        <VBox spacing="15" alignment="TOP_CENTER" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <!-- Product Grid Scroll Section -->
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS"
                        vbarPolicy="NEVER" hbarPolicy="NEVER"
                        style="-fx-background-color: transparent; -fx-background: transparent;">
                <GridPane fx:id="menuGrid" hgap="30.0" vgap="30.0"
                        style="-fx-background-color: transparent;">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="400.0" />
                    </columnConstraints>
                </GridPane>
            </ScrollPane>

            <!-- Buttons at Bottom, placed higher with extra padding below -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 0 0 40 0;">
                <Button text="Cancel Order" onAction="#goToHomePage"
                        style="-fx-padding: 15 30; -fx-font-size: 16px; -fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
                <Button text="Go to Checkout" onAction="#goToCheckoutPage"
                        style="-fx-padding: 15 30; -fx-font-size: 16px; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
                <Button text="HELP" onAction="#goToHelpPage"
                        style="-fx-padding: 15 30; -fx-font-size: 16px; -fx-background-color: blue; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>