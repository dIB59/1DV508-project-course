<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.dashboard.DashboardController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white;">

    <BorderPane prefHeight="400.0" prefWidth="600.0">

        <!-- Sidebar Navbar -->
        <left>
            <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="140.0"
                  style="-fx-background-color: black; -fx-padding: 20;">
                <Label text="Kiosk" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>

                <Button text="Products"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        prefWidth="120.0"/>

                <Button text="Orders"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        prefWidth="120.0"/>

                <Button text="Settings"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        prefWidth="120.0"/>

                <Button text="Go Home"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        onAction="#goToHomePage"
                        prefWidth="120.0"/>

            </VBox>
        </left>

        <!-- Main Content Area -->
        <center>
            <Label text="Products" style="-fx-text-fill: black; -fx-font-size: 28px; -fx-font-weight: bold;"/>

            <ScrollPane layoutX="10" layoutY="60" prefHeight="480.0" prefWidth="580.0" fitToWidth="true"
                        AnchorPane.topAnchor="60" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
                        AnchorPane.bottomAnchor="60">
                <VBox fx:id="productList"
                      spacing="20"
                      alignment="TOP_CENTER"
                      style="-fx-padding: 20;">
                    <!-- Menu items dynamically injected here -->
                </VBox>
            </ScrollPane>

        </center>

    </BorderPane>
</AnchorPane>
