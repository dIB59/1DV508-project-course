<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.dashboard.DashboardController"
            style="-fx-background-color: white;
            -fx-min-width: 1920px;
-fx-min-height: 1080px;">

    <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Sidebar Navbar -->
        <left>
            <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="140.0"
                  style="-fx-background-color: black; -fx-padding: 20;">
                <Label text="Kiosk" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>

                <Button text="Products"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        prefWidth="120.0"/>

                <Button text="Coupons"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        onAction="#goToCouponsPage"
                        prefWidth="120.0"/>

                <Button text="Languages"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        onAction="#goToLanguagesPage"
                        prefWidth="120.0"/>

                <Button text="Settings"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        prefWidth="120.0"/>

                <Button text="Go Home"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        onAction="#goToHomePage"
                        prefWidth="120.0"/>
            </VBox>
        </left>

        <!-- Main Content Area -->
        <center>
            <VBox spacing="20.0" alignment="TOP_CENTER" style="-fx-padding: 40;">
                <Label text="Products" style="-fx-text-fill: black; -fx-font-size: 28px; -fx-font-weight: bold;"/>

                <Button text="Create Product"
                        onAction="#createProduct"
                        style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"
                        prefWidth="160.0"/>

                <ScrollPane fitToWidth="true" fitToHeight="true" maxHeight="Infinity" maxWidth="Infinity">
                    <VBox fx:id="productList"
                          spacing="20"
                          alignment="TOP_CENTER"
                          style="-fx-padding: 20;">
                        <!-- Menu items dynamically injected here -->
                    </VBox>
                </ScrollPane>
            </VBox>
        </center>

    </BorderPane>
</AnchorPane>
