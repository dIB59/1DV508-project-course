<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.dashboard.DashboardController"
            style="-fx-background-color: -fx-color-background;
                   -fx-min-width: 1920px;
                   -fx-min-height: 1080px;">

    <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Sidebar Navbar -->
        <left>
            <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="140.0"
                  style="-fx-background-color: -fx-color-foreground; -fx-padding: 20;">
                <Label text="Kiosk"
                       style="-fx-text-fill: -fx-text-primary;
                              -fx-font-size: 22px;
                              -fx-font-weight: bold;" />

                <Button text="Products"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <Button text="Coupons"
                        onAction="#goToCouponsPage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <Button text="Languages"
                        onAction="#goToLanguagesPage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <Button text="Settings"
                        onAction="#goToSettingsPage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <Button text="Go Home"
                        onAction="#goToHomePage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />
            </VBox>
        </left>

        <!-- Main Content Area -->
        <center>
            <VBox spacing="20.0" alignment="TOP_CENTER"
                  style="-fx-padding: 40;">
                <Label text="Products"
                       style="-fx-text-fill: -fx-text-primary;
                              -fx-font-size: 28px;
                              -fx-font-weight: bold;" />

                <Button text="Create Product"
                        onAction="#createProduct"
                        prefWidth="160.0"
                        style="-fx-background-color: -fx-color-muted;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <ScrollPane fitToWidth="true" fitToHeight="true" maxHeight="Infinity" maxWidth="Infinity"
                            style="
                -fx-background-color: transparent;
                -fx-background-insets: 0;
                -fx-border-width: 0;
                -fx-padding: 0;
                -fx-hbar-policy: never;
                -fx-vbar-policy: never;
                ">

                <VBox fx:id="productList"
                          spacing="20"
                          alignment="TOP_CENTER"
                          style="-fx-padding: 20; -fx-background-color: -fx-color-background;" />
                </ScrollPane>
            </VBox>
        </center>

    </BorderPane>
</AnchorPane>
