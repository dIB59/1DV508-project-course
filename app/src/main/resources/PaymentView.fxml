<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="500" prefHeight="650">
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- Title -->
        <Label text="Payment Details">
            <font>
                <Font size="20"/>
            </font>
        </Label>

        <!-- Payment Buttons -->
        <HBox spacing="10">
            <Button text="PayPal" prefWidth="180" style="-fx-font-weight: bold; -fx-text-fill: #0070ba;"/>
            <Button text="G Pay" prefWidth="180" style="-fx-background-color: black; -fx-text-fill: white;"/>
        </HBox>

        <Label text="or checkout using a credit card"/>

        <!-- Credit Card Form -->
        <VBox spacing="10">
            <Label text="Cardholder Name"/>
            <TextField promptText="Name on Card"/>

            <Label text="Card Number"/>
            <TextField promptText="4111 1111 1111 1111"/>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Expiration"/>
                    <TextField promptText="MM/YY" prefWidth="220"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="CVV"/>
                    <TextField promptText="123" prefWidth="220"/>
                </VBox>
            </HBox>

            <Label text="Postal Code"/>
            <TextField promptText="Postal or ZIP code"/>
        </VBox>

        <!-- Payment Summary: Corrected Two-Column Grid -->
        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text=" 144.00 (approx. £117 GBP)" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Yearly plan discount:" style="-fx-text-fill: #e91e63;" GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>
            <Label text="- $84.00 (approx. -£69 GBP)" style="-fx-text-fill: #e91e63;" GridPane.rowIndex="1"
                   GridPane.columnIndex="1"/>

            <Label text="Billed Now:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label text="USD $60.00 (approx. £49 GBP)" style="-fx-font-weight: bold;" GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Footer Note -->
        <Label wrapText="true" style="-fx-font-size: 10;">
            All sales are charged in USD and all sales are final. You will be charged $60.00 USD
        </Label>
    </VBox>
</AnchorPane>
