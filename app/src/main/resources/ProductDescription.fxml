<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.product.ProductDetailsController"
            prefHeight="600.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10.0" layoutX="20.0" layoutY="20.0" prefWidth="560.0">
        <Label fx:id="productName" style="-fx-font-size: 18px;" text="Product Name"/>

        <!-- Product Price -->
        <Label fx:id="productPrice" style="-fx-font-size: 16px;" text="Product Price"/>

        <!-- Product Description -->
        <Label fx:id="productDescription" style="-fx-font-size: 16px;" text="Product Description"/>

        <!-- Product Ingredients -->
        <Label fx:id="productIngredients" style="-fx-font-size: 16px;" text="Product Ingredient"/>

        <Label style="-fx-font-size: 16px;" text="Tomato Quantity"/>

        <Spinner fx:id="tomatoSpinner" prefWidth="150.0"/>

        <Label style="-fx-font-size: 16px;" text="Tomato Quantity"/>

        <Spinner fx:id="cheeseSpinner" prefWidth="150.0"/>

        <Label style="-fx-font-size: 16px;" text="Cheese Quantity"/>

        <Spinner fx:id="jalapenoSpinner" prefWidth="150.0"/>

        <Label style="-fx-font-size: 16px;" text="Jalapeno Quantity"/>

        <!-- Quantity Spinner -->
        <Spinner fx:id="quantitySpinner" prefWidth="150.0"/>

        <!-- Add to Order Button -->
        <Button fx:id="addToOrderButton" text="Add to Order" onAction="#addToOrder"/>
    </VBox>

</AnchorPane>