<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Spinner?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.product.ProductDetailsController"
            prefHeight="600.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10.0" layoutX="20.0" layoutY="20.0" prefWidth="560.0">
        <Label fx:id="productName" style="-fx-font-size: 18px;" text="Product Name"/>
        
        <!-- Product Price -->
        <Label fx:id="productPrice" style="-fx-font-size: 16px;" text="Product Price"/>

        <!-- Product Description -->
        <Label fx:id="productDescription" style = "-fx-font-size: 16px;" text="Product Description"/>
        
        <!-- Quantity Spinner -->
        <Spinner fx:id="quantitySpinner" prefWidth="150.0"/>
        
        <!-- Add to Order Button -->
        <Button fx:id="addToOrderButton" text="Add to Order" onAction="#addToOrder"/>
    </VBox>

</AnchorPane>