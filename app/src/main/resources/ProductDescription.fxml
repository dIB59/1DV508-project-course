<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.features.product.ProductDetailsController"
            style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;">

    <VBox spacing="25" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;">

        <!-- Product Name -->
        <Label fx:id="productName" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Product Name"/>

        <!-- Product Price -->
        <Label fx:id="productPrice" style="-fx-font-size: 20px; -fx-text-fill: #555;" text="Product Price"/>

        <!-- Product Description -->
        <Label fx:id="productDescription" wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #777;" text="Product Description"/>

        <!-- Quantity Spinner -->
        <HBox spacing="15" alignment="CENTER">
            <Label text="Quantity:" style="-fx-font-size: 16px; -fx-text-fill: #555;"/>
            <Spinner fx:id="quantitySpinner" prefWidth="150.0" style="-fx-font-size: 16px;"/>
        </HBox>

        <!-- Add to Order Button -->
        <Button fx:id="addToOrderButton" text="Add to Order"
                style="-fx-padding: 15 40; -fx-font-size: 18px
                ; -fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;"
                onAction="#addToOrder"/>

        <HBox spacing="20" alignment="TOP_CENTER">
        <!-- Sides Section -->
            <VBox fx:id="sidesContainer" spacing="15" alignment="TOP_RIGHT"
                style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-background-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 10;">
                <Label text="Sides" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            </VBox>

            <!--Ingredients Section-->
            <VBox fx:id="ingredientsContainer" spacing="15" alignment ="TOP_LEFT" 
                style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-background-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 10;">
                <Label text="Ingredients" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            </VBox>
        </HBox>
    </VBox>

</AnchorPane>