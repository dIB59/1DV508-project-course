<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.features.feedback.FeedbackController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER"
          spacing="30.0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0">

        <Label text="Please rate your experience"
               style="-fx-text-fill: black; -fx-font-size: 28px; -fx-font-weight: bold;"/>

        <HBox alignment="CENTER" spacing="15.0">
            <Button text="★" onAction="#handleRating"
                    style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-text-fill: #999;"/>
            <Button text="★" onAction="#handleRating"
                    style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-text-fill: #999;"/>
            <Button text="★" onAction="#handleRating"
                    style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-text-fill: #999;"/>
            <Button text="★" onAction="#handleRating"
                    style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-text-fill: #999;"/>
            <Button text="★" onAction="#handleRating"
                    style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-text-fill: #999;"/>
        </HBox>
    </VBox>
</AnchorPane>
