<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="org.example.features.coupons.CouponsController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Main container -->
    <VBox spacing="20.0"
          AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.bottomAnchor="30.0"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">

        <!-- Code Label and TextField -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Code:"
                   labelFor="$codeField"
                   style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" />
            <TextField fx:id="codeField" promptText="Enter coupon code"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc; -fx-padding: 5 10;" />
        </HBox>

        <!-- Discount Label and TextField -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Discount:"
                   labelFor="$discountField"
                   style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" />
            <TextField fx:id="discountField" promptText="Enter discount amount"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc; -fx-padding: 5 10;" />
        </HBox>

        <!-- Apply Coupon Button -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Button text="Apply Coupon"
                    fx:id="addCouponButton"
                    onAction="#handleAddCouponButtonAction"
                    maxWidth="120"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 20; -fx-font-size: 14px;" />
        </HBox>

        <!-- Scrollable Coupons Section -->
        <ScrollPane fitToWidth="true" maxHeight="240">
            <VBox fx:id="couponsList"
                  spacing="20"
                  alignment="TOP_CENTER"
                  style="-fx-padding: 20;" />
        </ScrollPane>

        <!-- Go Back Button -->
        <HBox alignment="CENTER_LEFT">
            <Button text="Go Back to Menu"
                    onAction="#goToDashboardPage"
                    maxWidth="250"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 20; -fx-font-size: 14px;" />
        </HBox>

    </VBox>

</AnchorPane>
