<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="org.example.features.coupons.CouponsController"
            style="-fx-background-color: #f4f4f4;">

    <VBox layoutX="100.0" layoutY="100.0" spacing="20.0" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">

        <!-- Discount Label and TextField -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Discount:"
                   style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" />
            <TextField fx:id="discountField" promptText="Enter discount amount"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc; -fx-padding: 5 10;" />
        </HBox>

        <!-- Code Label and TextField -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Code:"
                   style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" />
            <TextField fx:id="codeField" promptText="Enter coupon code"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc; -fx-padding: 5 10;" />
        </HBox>

        <!-- Apply and Delete Buttons -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Button text="Apply Coupon"
                    fx:id="addCouponButton"
                    onAction="#handleAddCouponButtonAction"
                    maxWidth="120"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 20; -fx-font-size: 14px;" />

            <Button text="Delete Coupon"
                    fx:id="deleteCouponButton"
                    onAction="#handleDeleteCouponButtonAction"
                    maxWidth="120"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 20; -fx-font-size: 14px;" />
        </HBox>

        <!-- Scrollable Coupons Section -->
        <ScrollPane layoutX="10" layoutY="60" prefHeight="480.0" prefWidth="580.0" fitToWidth="true"
                    AnchorPane.topAnchor="60" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
                    AnchorPane.bottomAnchor="60">
            <VBox fx:id="couponsList"
                  spacing="20"
                  alignment="TOP_CENTER"
                  style="-fx-padding: 20;">
                <!-- Menu items dynamically injected here -->
            </VBox>
        </ScrollPane>

        <!-- Optional Apply Button -->
        <Button text="Go Back to Menu"
                onAction="#goToDashboardPage"
                maxWidth="250"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 20; -fx-font-size: 14px;" />
    </VBox>

</AnchorPane>
