<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.coupons.CouponsController"
            style="-fx-background-color: -fx-color-background;
                   -fx-min-width: 1920px;
                   -fx-min-height: 1080px;">

    <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Sidebar Navbar -->
        <left>
            <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="140.0"
                  style="-fx-background-color: -fx-color-foreground; -fx-padding: 20;">
                <Label text="Kiosk"
                       style="-fx-text-fill: -fx-text-primary;
                              -fx-font-size: 22px;
                              -fx-font-weight: bold;" />

                <Button text="Products"
                        onAction="#goToProductsPage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <Button text="Coupons"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;
                               -fx-font-weight: bold;" />

                <Button text="Languages"
                        onAction="#goToLanguagesPage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <Button text="Settings"
                        onAction="#goToSettingsPage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />

                <Button text="Go Home"
                        onAction="#goToHomePage"
                        prefWidth="120.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: -fx-text-primary;
                               -fx-font-size: 14px;
                               -fx-cursor: hand;" />
            </VBox>
        </left>

        <!-- Main Content Area -->
        <center>
            <VBox spacing="20.0" alignment="TOP_CENTER"
                  style="-fx-padding: 40;">
                <Label text="Coupons"
                       style="-fx-text-fill: -fx-text-primary;
                              -fx-font-size: 28px;
                              -fx-font-weight: bold;" />

                <HBox spacing="20" alignment="CENTER_LEFT">
                    <VBox spacing="10">
                        <Label text="Code:"
                               style="-fx-font-size: 14px; -fx-text-fill: -fx-text-primary; -fx-font-weight: bold;" />
                        <TextField fx:id="codeField"
                                   promptText="Enter coupon code"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc; -fx-padding: 5 10;" />
                    </VBox>

                    <VBox spacing="10">
                        <Label text="Discount:"
                               style="-fx-font-size: 14px; -fx-text-fill: -fx-text-primary; -fx-font-weight: bold;" />
                        <TextField fx:id="discountField"
                                   promptText="Enter discount amount"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #cccccc; -fx-padding: 5 10;" />
                    </VBox>

                    <Button text="Apply Coupon"
                            fx:id="addCouponButton"
                            onAction="#handleAddCouponButtonAction"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 20; -fx-font-size: 14px;" />
                </HBox>

                <ScrollPane fitToWidth="true" maxHeight="240"
                            style="-fx-background-color: transparent; -fx-border-width: 0;">
                    <VBox fx:id="couponsList"
                          spacing="20"
                          alignment="TOP_CENTER"
                          style="-fx-padding: 20; -fx-background-color: -fx-color-background;" />
                </ScrollPane>

                <Button text="Go Back to Menu"
                        onAction="#goToDashboardPage"
                        maxWidth="250"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 20; -fx-font-size: 14px;" />
            </VBox>
        </center>

    </BorderPane>
</AnchorPane>
