<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.admin.AdminController"
            style="-fx-background-color: white;
            -fx-pref-width: 1000;
            -fx-pref-height: 1000;
">

    <VBox alignment="CENTER"
          layoutX="150.0"
          layoutY="100.0"
          spacing="15.0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0">

        <Label text="Welcome Back"
               style="-fx-text-fill: black; -fx-font-size: 28px; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField"
                   promptText="Username"
                   maxWidth="250"
                   style="-fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: black;"/>

        <AnchorPane maxWidth="250">
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           prefWidth="250"
                           style="-fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: black;" />

            <TextField fx:id="visiblePasswordField"
                       promptText="Password"
                       prefWidth="250"
                       style="-fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: black;"
                       visible="false"
                       managed="false" />

            <Button fx:id="togglePasswordBtn"
                    text="ðŸ‘"
                    layoutX="220"
                    prefWidth="30"
                    style="-fx-background-color: transparent;"
                    onAction="#togglePasswordVisibility" />
        </AnchorPane>

        <Button text="Login"
                fx:id="loginButton"
                onAction="#handleLoginButtonAction"
                maxWidth="250"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>

        <Label text="Forgot your password?"
               onMouseClicked="#handleForgotPassword"
               style="-fx-text-fill: #555555; -fx-underline: true; -fx-cursor: hand;"/>
    </VBox>
</AnchorPane>
