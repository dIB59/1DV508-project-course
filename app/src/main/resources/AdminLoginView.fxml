<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.features.admin.AdminController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white;">

    <VBox alignment="CENTER"
          layoutX="150.0"
          layoutY="100.0"
          spacing="15.0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0">

        <Label text="Welcome Back"
               style="-fx-text-fill: black; -fx-font-size: 28px; -fx-font-weight: bold;" />

        <TextField fx:id="usernameField"
                   promptText="Username"
                   maxWidth="250"
                   style="-fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: black;" />

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       maxWidth="250"
                       style="-fx-background-radius: 10; -fx-padding: 10; -fx-text-fill: black;" />

        <Button text="Login"
                fx:id="loginButton"
                onAction="#handleLoginButtonAction"
                maxWidth="250"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" />

        <Label text="Forgot your password?"
               style="-fx-text-fill: #555555; -fx-underline: true; -fx-cursor: hand;" />
    </VBox>
</AnchorPane>
