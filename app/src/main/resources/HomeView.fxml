<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.home.HomeController"
            prefWidth="1280.0" prefHeight="800.0"
            style="-fx-background-color: white;">

    <!-- Central VBox -->
    <VBox spacing="30" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding: 80;">

        <!-- Welcome Title -->
        <Label text="Welcome to our Kiosk!"
               fx:id="welcomeLabel"
               style="-fx-font-size: 44px; -fx-font-weight: bold; -fx-text-fill: #021588;" />

        <Region prefHeight="50"/>

        <!-- Subtitle -->
        <Label text="Please choose one of the options below:"
               style="-fx-font-size: 20px; -fx-text-fill: #021588;" />

        <!-- Spacer between subtitle and buttons -->
        <Region prefHeight="20"/>

        <!-- Ordering Buttons -->
        <VBox spacing="20" alignment="CENTER">
            <Button text="ðŸ½  Eat-in"
                    fx:id="eatInButton"
                    onAction="#goToMenuPageEatIn"
                    prefWidth="200" prefHeight="55"
                    style="-fx-background-color: #ffc430;
                   -fx-text-fill: #021588;
                   -fx-font-size: 20px;
                   -fx-font-weight: 20;
                   -fx-background-radius: 12;" />

            <Button text="ðŸ›  Takeout"
                    fx:id="takeOutButton"
                    onAction="#goToMenuPageTakeout"
                    prefWidth="200" prefHeight="55"
                    style="-fx-background-color: #ffc400;
                   -fx-text-fill: #021588;
                   -fx-font-size: 20px;
                   -fx-font-weight: 20;
                   -fx-background-radius: 12;" />
        </VBox>
    </VBox>
    <!-- Language Selector (Bottom Left, above Admin) --><!-- Language Selector (Bottom Left, above Admin) -->
    <ComboBox fx:id="languageSelector"
              promptText="Select Language"
              prefWidth="240"
              onAction="#translatePage"
              AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="30"
              style="-fx-font-size: 20px;
                 -fx-text-fill: white;
                 -fx-background-color: #76818a;
                 -fx-background-radius: 8;
                 -fx-border-radius: 8;
                 -fx-padding: 5 10;
                 -fx-border-color:#494f55 ;">
    </ComboBox>

    <!-- Admin Button -->
    <Button text="Admin"
            fx:id="adminButton"
            onAction="#goToAdminPage"
            AnchorPane.bottomAnchor="30"
            AnchorPane.rightAnchor="30"
            style="-fx-background-color:#021277 ;
                   -fx-text-fill: yellow;
                   -fx-font-size: 16px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 10;
                   -fx-padding: 10 25;" />

    <ToggleButton fx:id="darkModeToggle"
                  text="Dark Mode"
                  onAction="#toggleDarkMode"
                  AnchorPane.topAnchor="20"
                  AnchorPane.rightAnchor="30"
                  layoutX="30" layoutY="30"
                  style="-fx-background-color: #444; -fx-text-fill: white;" />
</AnchorPane>