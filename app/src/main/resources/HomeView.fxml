<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.example.features.home.HomeController"
            stylesheets="@styles/home.css"
            prefWidth="600.0" prefHeight="600.0">
            prefWidth="1280.0" prefHeight="800.0"
            style="-fx-background-color: white;">

    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding: 100; -fx-margin: 10">
    </VBox>

    <!-- Central VBox -->
    <VBox spacing="30" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding: 80;">
    </VBox>


        <!-- Welcome Title -->
        <Label text="Welcome to QuickBite!"
               fx:id="welcomeLabel"
               style="-fx-font-size: 44px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <!-- Subtitle -->
        <Label text="Please choose one of the options below:"
               style="-fx-font-size: 20px; -fx-text-fill: #666;" />

        <!-- Action Buttons -->
        <VBox spacing="20" alignment="CENTER">

            <Button text="🍽  Eat-in"
                    fx:id="eatInButton"
                    onAction="#goToMenuPageEatIn"
                    prefWidth="170" prefHeight="40"
                    style="-fx-background-color: #ff3b30;
                   -fx-text-fill: white;
                   -fx-font-size: 24px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 12;" />
                onAction="#goToMenuPageEatIn"/>

        <Button text="🛍  Takeout"
                fx:id="takeOutButton"
                onAction="#goToMenuPageTakeout"
                prefWidth="170" prefHeight="40"
                style="-fx-background-color: #ff9500;
               -fx-text-fill: white;
               -fx-font-size: 24px;
               -fx-font-weight: bold;
               -fx-background-radius: 12;" />
       c
    </VBox>

    <!-- Language Selector (Bottom Left, above Admin) -->
    <ComboBox fx:id="languageSelector"
              prefWidth="150"
              onAction="#translatePage"
              AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20">
    </ComboBox>


    <Button text="Admin"
            fx:id="adminButton"
            style="-fx-padding: 8 16; -fx-font-size: 13px; -fx-background-color: darkblue; -fx-text-fill: white;"
            onAction="#goToAdminPage"
            AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20"/>
            AnchorPane.bottomAnchor="30"
            AnchorPane.rightAnchor="30"
            style="-fx-background-color: #0033cc;
                   -fx-text-fill: white;
                   -fx-font-size: 16px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 10;
                   -fx-padding: 10 25;" />
</AnchorPane>
