<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.features.home.HomeController"
            prefWidth="600.0" prefHeight="400.0">

    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-padding: 30;">

        <!-- Header -->
        <Label text="Welcome Home"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Body -->
        <Label text="This is your home screen."
               style="-fx-font-size: 16px;" />

        <!-- Button -->
        <Button text="Continue"
                style="-fx-padding: 10 20; -fx-font-size: 14px;"
                fx:id="continueButton"
                onAction="#handleContinue"/>

    </VBox>

</AnchorPane>
